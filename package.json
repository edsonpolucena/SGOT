{
  "name": "sgto-root",
  "private": true,
  "scripts": {
    "docker:start": "docker start sgot-postgres || docker compose -f infra/compose/docker-compose.yml up -d",
    "backend": "npm run dev:server --prefix apps/backend",
    "frontend": "npm run dev --prefix apps/frontend",
    "dev": "npm-run-all --parallel backend frontend",
    "start:all": "npm run docker:start && npm run dev",
    "test:frontend": "npm run test:ci --prefix apps/frontend",
    "test:backend": "npm run test:ci --prefix apps/backend",
    "test:backend:setup": "npm run test:db:start --prefix apps/backend",
    "test:all": "npm-run-all test:frontend test:backend",
    "coverage:open:frontend": "cd apps/frontend/coverage && start index.html",
    "coverage:open:backend": "cd apps/backend/coverage/lcov-report && start index.html"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
