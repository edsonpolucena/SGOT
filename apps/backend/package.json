{
  "name": "sgot-backend",
  "private": true,
  "scripts": {
    "dev:server": "nodemon src/server.js",
    "start": "node src/server.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "test": "cross-env NODE_ENV=test DATABASE_URL=postgresql://sgot_test:sgot_test_password@localhost:5434/sgot_test jest --runInBand --detectOpenHandles",
    "test:watch": "cross-env NODE_ENV=test DATABASE_URL=postgresql://sgot_test:sgot_test_password@localhost:5434/sgot_test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test DATABASE_URL=postgresql://sgot_test:sgot_test_password@localhost:5434/sgot_test jest --coverage",
    "test:ci": "jest --ci --coverage --runInBand",
    "test:db:start": "docker-compose -f docker-compose.test.yml up -d",
    "test:db:stop": "docker-compose -f docker-compose.test.yml down",
    "test:db:reset": "docker-compose -f docker-compose.test.yml down -v && docker-compose -f docker-compose.test.yml up -d && timeout /t 5 /nobreak >nul && cross-env DATABASE_URL=postgresql://sgot_test:sgot_test_password@localhost:5434/sgot_test npx prisma db push",
    "test:setup": "npm run test:db:start && timeout /t 5 /nobreak >nul && cross-env DATABASE_URL=postgresql://sgot_test:sgot_test_password@localhost:5434/sgot_test npx prisma db push"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.896.0",
    "@aws-sdk/s3-request-presigner": "^3.896.0",
    "@prisma/client": "^5.16.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "multer-s3": "^3.0.1",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "bcryptjs": "^3.0.2",
    "cross-env": "^10.1.0",
    "jest": "^29.7.0",
    "nodemailer": "^7.0.10",
    "nodemon": "^3.1.4",
    "prisma": "^5.16.1",
    "supertest": "^6.3.4"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
